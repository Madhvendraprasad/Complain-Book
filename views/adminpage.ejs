    <section id="home">
    
    </section>
    <% if (check2.length>0) { %>
        <div class="alert alert-danger text-center">
          <%= check2 %>
        </div>
      <% } %>
    <div class="container">
        <div class="c1">
            <p>
                <a class="btn1" data-toggle="collapse" href="#collapseExample1" role="button" aria-expanded="false"
                    aria-controls="collapseExample1">
                    <button>
                        Standard Complain
                    </button>
                </a>
            </p>
            <div class="collapse" id="collapseExample1">
            <% for (let i = 0; i < standardcomplaint.length; i++) { %>
                
                    <div class="card card-body">
                        <ul class="list">
                            <div class="li">
                                <a href=""><%= standardcomplaint[i]._id.toString() %></a>
                            </div>
                            <div class="li">
                                <a href=""><%= standardcomplaint[i].ptype %></a>
                            </div>
                            <div class="li">
                                <a href=""><%= standardcomplaint[i].description %></a>
                            </div>
                            <div class="li">
                                <form action="" method="post">
                                    <label for="Name">Enter the name of person to be assigned</label><br>
                                    <input type="text" id="problem" name="Name" require><br>
                                    <label for="email">Enter the email of person to be assigned</label><br>
                                    <input type="text" id="assignee" name="email" require><br>
                                    <input type="hidden" id="problemid" name="problemid" value="<%= standardcomplaint[i]._id.toString() %>">
                                    <input type="submit" value="Submit"class="mt-3" >
                                  </form> 
                            </div>
                        </ul>
                    </div>
                
              <% } %>
            </div>
            </div>
        </div>
